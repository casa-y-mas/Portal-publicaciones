generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  admin
  supervisor
  editor
}

enum UserStatus {
  active
  inactive
}

enum AccountPlatform {
  instagram
  facebook
}

enum AccountStatus {
  connected
  token_expiring
  disconnected
}

enum ContentType {
  post
  reel
  story
  carousel
}

enum MediaAssetType {
  image
  video
}

enum PostStatus {
  draft
  pending_approval
  scheduled
  cancelled
  published
  failed
}

model User {
  id            String          @id @default(cuid())
  name          String
  email         String          @unique
  passwordHash  String?
  role          UserRole
  status        UserStatus      @default(active)
  avatar        String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  createdPosts  ScheduledPost[] @relation("PostCreator")
  approvedPosts ScheduledPost[] @relation("PostApprover")
  mediaAssets   MediaAsset[]    @relation("AssetUploader")
}

model Project {
  id             String          @id @default(cuid())
  name           String          @unique
  color          String
  description    String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  socialAccounts SocialAccount[]
  posts          ScheduledPost[]
  mediaAssets    MediaAsset[]
}

model SocialAccount {
  id        String          @id @default(cuid())
  platform  AccountPlatform
  username  String
  type      String
  status    AccountStatus   @default(connected)
  expiresAt DateTime?
  projectId String
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  project   Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model ScheduledPost {
  id             String      @id @default(cuid())
  title          String
  caption        String
  contentType    ContentType
  status         PostStatus
  publishAt      DateTime
  recurrenceJson Json?
  platformsJson  Json
  thumbnail      String?
  projectId      String
  creatorId      String
  approverId     String?
  mediaAssetId   String?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  project        Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  creator        User        @relation("PostCreator", fields: [creatorId], references: [id], onDelete: Restrict)
  approver       User?       @relation("PostApprover", fields: [approverId], references: [id], onDelete: SetNull)
  mediaAsset     MediaAsset? @relation(fields: [mediaAssetId], references: [id], onDelete: SetNull)

  @@index([projectId])
  @@index([creatorId])
  @@index([approverId])
  @@index([mediaAssetId])
  @@index([status])
  @@index([publishAt])
}

model MediaAsset {
  id             String          @id @default(cuid())
  fileName       String
  url            String
  mimeType       String
  type           MediaAssetType
  sizeBytes      Int
  tagsJson       Json            @default("[]")
  projectId      String
  uploadedById   String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  project        Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  uploadedBy     User?           @relation("AssetUploader", fields: [uploadedById], references: [id], onDelete: SetNull)
  scheduledPosts ScheduledPost[]

  @@index([projectId])
  @@index([uploadedById])
  @@index([type])
}
